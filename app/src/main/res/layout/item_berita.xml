<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/story_view"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_berita_image_preview"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:background="@drawable/custom_background_berita"
            android:contentDescription="@string/cd_image_preview_story"
            android:src="@drawable/ic_image" />

        <TextView
            android:id="@+id/tv_berita_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_title_berita"
            android:textColor="@color/black"
            android:padding="8dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_berita_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:text="@string/tv_description_berita"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
